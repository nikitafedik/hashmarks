# List bookmarks in a pretty, aligned format

b() {
  emulate -L zsh
  setopt pipefail

  echo "ðŸ“• BOOKMARKS ============================"
  if [[ -f "$BOOKMARK_FILE" ]]; then
    # Pretty print with awk for exact parsing and alignment
    awk -F= 'NF && $1!="" && $2!="" {
      printf "\033[1;34m%-20s\033[0m %s\n", $1, $2
    }' -- "$BOOKMARK_FILE"
  else
    echo "No bookmarks set."
  fi
  echo "========================================="
}